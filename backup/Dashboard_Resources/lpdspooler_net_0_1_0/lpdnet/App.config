<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
	</configSections>
	<appSettings>
	 <add key="lpd.port" value="515"/>
	 <add key="lpd.queues.defaultHandler" value="lpdnet.handler.PrintRedirect"/>
	 <add key="lpd.queue.file.outputDirectory" value="c:\\"/>
	 <add key="lpd.queue.file.extension" value=".txt"/>
	 <add key="lpd.queue.raw.printer" value="LPD_QUEUE"/>
	</appSettings>
	
	<!-- This section contains the log4net configuration settings -->
	<log4net>
		<!-- Define some output appenders -->
		<appender name="LogFileAppender" type="log4net.Appender.FileAppender">
			<param name="File" value="log.txt" />
			<!-- Example using environment variables in params -->
			<!-- <param name="File" value="${TMP}\\log-file.txt" /> -->
			<param name="AppendToFile" value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%d %-5p %c - %m%n" />
			</layout>
		</appender>
		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%-5p - %c - %m%n" />
			</layout>
		</appender>
		<!-- Setup the root category, add the appenders and set the default level -->
		<root>
			<level value="INFO"/>
		</root>
		<!-- Specify the level for some specific categories -->
		<logger name="sf.net.lpdnet">
			<level value="ALL"/>
			<appender-ref ref="ConsoleAppender" />
			<appender-ref ref="LogFileAppender" />
		</logger>
	</log4net>
</configuration>